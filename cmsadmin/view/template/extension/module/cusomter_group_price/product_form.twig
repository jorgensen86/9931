<div class="form-group">
	<label class="col-sm-2 control-label" for="input-cgp-price">{{ entry_customer_group_price }}</label>
    <div class="col-sm-6">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                {% for customer_group in customer_groups %}
                    <tr>
                        <td class="text-center">{{ customer_group.name }}</td>
                        <td class="text-center"><input type="text" name="cgp[{{customer_group.customer_group_id }}]" value="{{ cgp[customer_group.customer_group_id] is defined ? cgp[customer_group.customer_group_id] : null }}" placeholder="{{ entry_customer_group_price }}" class="form-control"/></td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
</div>
