{{ header}} {{ column_left}}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" formtarget="_blank" form="form-supplier-order"  class="btn btn-info"><i
                    class="fa fa-print"></i> {{ button_order_print }}</button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i
                        class="fa fa-reply"></i></a>
            </div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-list"></i> {{ text_order_list }}</h3>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <form action="{{ print }}" method="post" enctype="multipart/form-data" id="form-supplier-order">
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <td style="width: 1px;" class="text-center"></td>
                                    <td class="text-left">{{ column_model }}</td>
                                    <td class="text-left">{{ entry_upc }}</td>
                                    <td class="text-left">{{ column_name }}</td>
                                    <td class="text-center" style="width: 100px">{{ column_quantity }}</td>
                                    <td class="text-center">{{ column_image }}</td>
                                    <td class="text-center">{{ column_quantity }}</td>
                                    <td class="text-center">{{ column_purchased }}</td>
                                    <td class="text-center">{{ column_price }}</td>
                                </tr>
                            </thead>
                            <tbody>
                                {% if products %}
                                {% for product in products %}
                                <tr>
                                    <td class="text-center">
                                        <input type="checkbox" name="products[]" value="{{ product.product_id }}"
                                        checked="checked" />
                                    </td>
                                    <td class="text-left">{{ product.model }}</td>
                                    <td class="text-left">{{ product.upc }}</td>
                                    <td class="text-left">{{ product.name }}</td>
                                    <td class="text-center"><input class="form-control" type="text" name="quantities[{{ product.product_id }}]" value="{{ product.quantity_alert }}"></td>
                                    <td class="text-center">{% if product.image %} <img src="{{ product.image }}" alt="{{ product.name }}" class="img-thumbnail" /> {% else %} <span class="img-thumbnail list"><i class="fa fa-camera fa-2x"></i></span> {% endif %}</td>
                                    <td class="text-center">{{ product.quantity }}</td>
                                    <td class="text-center">{{ product.purchased }}</td>
                                    <td class="text-center">{{ product.price }}</td>
                                </tr>
                                {% endfor %}
                                {% else %}
                                <tr>
                                    <td class="text-center" colspan="7">{{ text_no_results }}</td>
                                </tr>
                                {% endif %}
                            </tbody>
                        </table>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{{ footer }}