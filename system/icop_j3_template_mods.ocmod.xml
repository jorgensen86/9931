                $_['text_set'] = 'set'; 
            ]]></add>
        </operation>
	</file>

    <file path="catalog/language/el-gr/el-gr.php" error="skip">
        <operation info="" error="skip">
            <search><![CDATA[$_['button_cart']]]></search>
            <add position="before"><![CDATA[
                /* icop_j3_template_mods.ocmod.xml */
                $_['text_unit'] = 'τεμάχιο'; 
